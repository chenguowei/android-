              android:shape="rectangle"
              >   
              	<size android:width="10dp"
              	     android:height="10dp"/>
                <solid android:color="#000000" />   
          </shape>   
    </item>   
    <!-- 主体背景颜色值 -->  
    <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">   
